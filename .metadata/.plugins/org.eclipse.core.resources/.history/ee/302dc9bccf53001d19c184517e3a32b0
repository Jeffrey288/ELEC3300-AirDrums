#define BUFF_SIZE (1000)

//typedef union {
//	uint8_t raw[BUFF_SIZE];
//	uint16_t samples[BUFF_SIZE / 2];
//} FileBuff;

typedef struct {
	uint8_t raw[2][BUFF_SIZE];
	uint8_t* first[2];
//	uint8_t* last[2];
	uint8_t* curr[2];
	uint8_t reading;
//	uint8_t writing;
	uint16_t buffSize[2];
	uint8_t empty;
} FileStruct;

#define InitFileStruct(name) \
	FileStruct name; \
	name.first[0] = name.raw[0]; \
	name.first[1] = name.raw[1]; \
	name.curr[0] = name.first[0]; \
	name.curr[1] = name.first[1]; \
	name.reading = 0; \
	name.buffSize[0] = 0; \
	name.buffSize[1] = 0; \
	name.empty = 1;

